<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="GPLX"
        android:supportsRtl="true"
        android:theme="@style/Theme.Gplx_nhom6"
        android:usesCleartextTraffic="true"
        tools:targetApi="31">
        <activity
            android:name=".app.view.activity.ShowEditActivity"
            android:exported="false" />
        <activity
            android:name=".app.view.activity.ShowQuestionActivity"
            android:exported="false" />
        <activity
            android:name=".app.view.activity.LookUpActivity"
            android:exported="false" />
        <activity
            android:name=".app.view.activity.LessonViewPagerActivity"
            android:exported="false" />
        <activity
            android:name=".app.view.activity.LearnTheoryActivity"
            android:exported="false" />
        <activity
            android:name=".app.view.activity.IntroduceActivity"
            android:exported="false" />
        <activity
            android:name=".app.view.activity.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>